import unittest
import httplib
from hats_persistent_storage import persistent_storage_server as pss

class PersistentStorageServertest(unittest.TestCase):
    def setUp(self):
        #Because unittest seems to run some tests in parallel, we allow the OS to assign us aon open port.
        self.server = pss.HATSPersistentStorageServer(('',0), pss.HATSPersistentStorageRequestHandler)
        self.port = self.server.socket.getsockname()[1]
        self.thread = pss.serveInBackground(self.server)
        self.conn = httplib.HTTPConnection('localhost', self.port)

    def testGoodGetDeviceQueries(self):
        self.conn.request('GET', 'HD/house47/')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'RD/house47/atrium')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'HT/house47/lights')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'RT/house47/atrium/lights')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

    def testGoodGetUserQuery(self):
        conn.request('GET', 'UI/USER2034')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'UI/USER2034/email')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

    def testGoodGetHouseQuery(self):
        conn.request('GET', 'HI/house47')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'HI/house47/address')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

    def testGoodGetLogQueries(self):
        conn.request('GET', 'AL/user47/timestamp/')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'AL/user47/timestamp/house24/ballroom')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'AT/user21/timestamp/lightbulb/house10/ballroom')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'AI/user10/timestamp/light41/house10/ballroom')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'CL/user10/timestamp/house10/ballroom')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'CT/user40/timestamp/lightbulb/house14/ballroom')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

        conn.request('GET', 'CI/user10/timestamp/hlight41/house10/ballroom')
        resp = conn.getresponse()
        self.assertEqual(resp.status, 200)

    def testBadGetQueries(self):
        pass

    def testUnimplementedHttpMethods(self):
        pass

if __name__ == '__main__':
    unittest.main()
